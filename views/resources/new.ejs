<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <div class="new-resource">
    <h1>Add new resource</h1>
    <form action="/resources" method="POST">
      <input type="text" name="resourceName" placeholder="Resource Name"> 
      <input type="text" name="resourceLink" placeholder="Resource Link"> 
      <input type="text" name="resourceDescription" placeholder="Resource Description"> 
      <input type="text" name="resourceImg" placeholder="Image Link"> 
      <input type="text" name="associatedLanguage" placeholder="Associated Language"> 
      <label for="resourceType">Resource Type:</label>
        <select name="resourceType" id="resourceType">
          <option value="">--Please choose an option--</option>
          <option value="Speaking">Speaking/Pronunciation</option>
          <option value="Writing">Writing</option>
          <option value="Reading">Reading</option>
          <option value="Listening">Listening</option>
          <option value="Grammar">Grammar</option>
          <option value="Dictionary">Dictionary</option>
        </select>
      <button type="submit" class="btn btn-primary btn-lg">Submit</button>
      </form>
  </div>
</main>
