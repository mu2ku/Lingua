<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%- include('../partials/nav') %>
<main class="bg-light">
<h1><%= language.languageName %></h1>
<% resources.forEach(resource => { %>
  <div class="card-deck">
    <div class="card">
      <div class="card-body">
        <a href="<%= resource.resourceLink %>"><h5 class="card-name"><%= resource.resourceName %></h5></a>
        <!-- <h5 class="card-image"><%= resource.resourceImg %></h5> -->
        <p class="card-description"><%= resource.resourceDescription %></p>
        <button type="submit" class="btn btn-lg btn-info">Like</button>
      </div>
    </div>
  </div>
<% }) %>

<%# This is where we'll display a button to add/remove the game from your collection %> 
<% if (!userHasResource) { %>
  <form 
    action="/games/<%= apiResult.id %>/addToCollection?_method=PATCH" 
    method="POST"
  >
    <input type="text" name="name" hidden value="<%= apiResult.name %>">
    <input type="text" name="rawgId" hidden value="<%= apiResult.id %>">
    <input 
      type="text" 
      name="imageUrl" 
      hidden 
      value="<%= apiResult.background_image %>"
    >
    <input 
      type="text" 
      name="released" 
      hidden 
      value="<%= apiResult.released %>"
    >
    <button class="btn btn-primary">
      Add To Collection
    </button> 
  </form>
<% } %>
<% if (userHasGame) { %>
  <form 
    class="text-center" 
    action="/games/<%= apiResult.id %>/removeFromCollection?_method=PATCH" 
    method="POST"
  >
    <button class="btn btn-danger">
      Remove From Collection
    </button>
  </form>
<% } %>

</main>
<%- include('../partials/footer') %>